cabal-version:       2.4

name:                id
version:             0.1.0.0
license-file:        LICENSE

library
  exposed-modules:
    Data.Id
  -- other-modules:
  -- other-extensions:
  build-depends:
    aeson,
    base >=4.12 && <5,
    binary,
    deepseq,
    QuickCheck,
    hashable,
    http-api-data,
    lens,
    openapi3,
    uuid,
    path-pieces,
  if !impl(ghcjs)
    build-depends:
      postgresql-simple,
  hs-source-dirs:
    src
  default-language:
    Haskell2010
  default-extensions:
    AllowAmbiguousTypes
    DeriveGeneric
    GeneralizedNewtypeDeriving
    PolyKinds
    RankNTypes
    RoleAnnotations
    TypeApplications
    TypeFamilies
